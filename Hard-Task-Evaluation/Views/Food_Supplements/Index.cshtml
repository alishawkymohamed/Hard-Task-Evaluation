@model IEnumerable<Hard_Task_Evaluation.Models.Food_Supplements>

@{
    ViewBag.Title = "Index";
}

<h2>Food & Supplements</h2>
<br />

<div>
    <p style="display:inline-block;margin-right:40px;">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <p style="display:inline-block;">
        @Html.DropDownList("UserId", null,"Select User", htmlAttributes: new { @class = "form-control" })
    </p>
</div>
<div class="container">
    <div class="row">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.User.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Food_SupplementsType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Time)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Item)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Protien)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fat)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Carb)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalCalories)
                    </th>
                    <th></th>
                </tr>
            </thead>


            @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Food_SupplementsType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Item)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Protien)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Carb)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalCalories)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            </tbody>

    }

        </table>
    </div>
</div>


@section Scripts{
    <script>
        $(function () {
            $('table').DataTable();
            if (window.location.href.split('/')[window.location.href.split('/').length - 1].toLowerCase() != 'index') {
                $('select').val(window.location.href.split('/')[window.location.href.split('/').length - 1]);
            }
            $('select').on('change', function (event) {
                if ($(this).val()) {
                    window.location.href = '/Food_Supplements/Index/' + $(this).val();
                }
                else {
                    window.location.href = '/Food_Supplements/Index';
                }
            });
        })
    </script>
}